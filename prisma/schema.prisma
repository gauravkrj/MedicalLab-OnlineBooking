// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  LAB
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  phone         String?
  password      String
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bookings      Booking[]
  labProfile    Lab?
}

model Test {
  id            String    @id @default(cuid())
  name          String
  description   String?
  category      String
  price         Float
  duration      Int?      // Duration in days for results
  testType      TestType  @default(CLINIC_TEST) // HOME_TEST or CLINIC_TEST
  labId         String?   // If null, it's a general test available to all labs
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lab           Lab?      @relation(fields: [labId], references: [id], onDelete: SetNull)
  labTests      LabTest[]
  bookingItems  BookingItem[]

  @@index([labId])
  @@index([testType])
}

model Lab {
  id            String    @id @default(cuid())
  userId        String    @unique // Link to User account
  name          String
  address       String
  city          String
  state         String
  pincode       String
  phone         String
  email         String?
  latitude      Float?
  longitude     Float?
  isActive      Boolean   @default(true)
  isVerified    Boolean   @default(false) // Admin can verify labs
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tests         Test[]
  labTests      LabTest[]
  bookings      Booking[]

  @@index([city, state, pincode])
  @@index([isActive, isVerified])
}

model LabTest {
  id            String    @id @default(cuid())
  labId         String
  testId        String
  price         Float?    // Lab-specific price override
  isAvailable   Boolean   @default(true)
  lab           Lab       @relation(fields: [labId], references: [id], onDelete: Cascade)
  test          Test      @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([labId, testId])
  @@index([labId])
  @@index([testId])
}

model Booking {
  id            String      @id @default(cuid())
  userId        String
  labId         String
  bookingType   BookingType // HOME_COLLECTION or CLINIC_VISIT
  patientName   String      // Patient's name
  patientAge    Int         // Patient's age
  bookingDate   DateTime?
  bookingTime   String?     // Time slot (for clinic visits)
  address       String?     // Full address (required for home collection)
  city          String
  state         String?
  pincode       String?     // Required for home collection
  phone         String
  status        BookingStatus @default(PENDING)
  prescriptionUrl String?
  notes         String?
  totalAmount   Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id])
  lab           Lab         @relation(fields: [labId], references: [id])
  items         BookingItem[]

  @@index([userId])
  @@index([labId])
  @@index([bookingDate])
  @@index([status])
  @@index([bookingType])
}

model BookingItem {
  id            String    @id @default(cuid())
  bookingId     String
  testId        String
  price         Float
  booking       Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  test          Test      @relation(fields: [testId], references: [id])

  @@index([bookingId])
  @@index([testId])
}

enum TestType {
  HOME_TEST
  CLINIC_TEST
}

enum BookingType {
  HOME_COLLECTION
  CLINIC_VISIT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  SAMPLE_COLLECTED
  PROCESSING
  COMPLETED
  CANCELLED
}
